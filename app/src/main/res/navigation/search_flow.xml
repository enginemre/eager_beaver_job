<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_flow"
    app:startDestination="@id/searchFragment">


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.engin.eagerbeaver.presentation.main.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <argument
            android:name="category_id"
            app:argType="long" />
        <action
            android:id="@+id/action_search_fragment_to_jobDetailFragment"
            app:destination="@id/jobDetailFragmentSearch"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/jobDetailFragmentSearch"
        android:name="com.engin.eagerbeaver.presentation.main.job_detail.JobDetailFragment"
        android:label="JobDetailFragment">

        <argument
            android:name="job_id"
            app:argType="long" />
        <action
            android:id="@+id/action_jobDetailFragmentSearch_to_searchFragment"
            app:destination="@id/searchFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>